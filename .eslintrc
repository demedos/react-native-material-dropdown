{
  'parser': 'babel-eslint',

  'globals': {
    'setTimeout': true,
  },

  'plugins': [
    'react',
  ],

  'extends': [
    'eslint:recommended',
    'plugin:react/recommended',
  ],

  'rules': {
    'no-unused-vars': ['error', {
      'vars': 'all',
      'args': 'none',
      'ignoreRestSiblings': true,
    }],

    'comma-dangle': ['error', 'always-multiline'],
  },

  'settings': {
    'react': {
      'version': '16.9',
    },
  },
}

/* vim: set ft=javascript : */
